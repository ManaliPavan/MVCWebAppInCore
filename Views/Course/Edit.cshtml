<h3>Edit Course</h3>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Course Name")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("cname", (string)ViewBag.Cname)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Course Fees")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("fees", (decimal)ViewBag.Fees)
            @Html.Hidden("cid", (int)ViewBag.Cid)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Update" class="btn btn-warning" />
        </div>
    </div>
    @{Html.EndForm();}
</div>

